<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/title_green"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/mymessage_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_myuser"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/yzh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your zhanghu"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/bg_main"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_main"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/mymessage_iv_phone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/phone"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/mymessage_iv_phone"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blank"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/mymessage_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"
                    android:text="未绑定手机"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/help_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/mymessage_layout_click"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:id="@+id/mymessage_iv_help"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/help"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/mymessage_tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用帮助"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/mymessage_iv_help"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blank"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/setting_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/mymessage_layout_click2"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/mymessage_iv_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/setting"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/mymessage_tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="20sp"
                android:layout_toRightOf="@id/mymessage_iv_setting"
                android:layout_centerVertical="true"
                android:textColor="@color/blank"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>