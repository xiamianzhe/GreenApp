<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_green</item><!--标题栏颜色-->
        <item name="colorPrimaryDark">@color/title_green</item><!--状态栏颜色-->
        <item name="android:textColorPrimary">@color/bg_main</item>
    </style>
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/blank</item>
    </style>
    <style name="Qidong" parent="AppTheme">
    </style>
    <style name="tablayoutstyle">
        <item name="android:textSize">23dp</item>
    </style>
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@drawable/radiobutton_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--温度"chart","table" RadioButton控件style-->
    <style name="chart_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@drawable/chartradiobutton</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--湿度"chart","table" RadioButton控件style-->
    <style name="chart_menu_item1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@drawable/chartradiotxtcolor</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
